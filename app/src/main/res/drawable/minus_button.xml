<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@mipmap/minus" />
            </item>
            <item>
                <shape>
                    <gradient android:angle="270" android:endColor="@color/white_dark_tran" android:startColor="@color/white_trans" />
                    <stroke android:width="1dp" android:color="@color/darkgrey" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@mipmap/minus"  />
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/white_trans" android:startColor="@color/white_dark_tran" />
                    <stroke android:width="1dp" android:color="@color/darkgrey" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>